<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Изменить парфюм</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>Изменить парфюм</h1>
    <form action="/edit-perfume/<%= perfume.id %>" method="POST">
        <label for="name">Название парфюма:</label>
        <input type="text" id="name" name="name" value="<%= perfume.name %>" required>

        <label for="price">Цена:</label>
        <input type="number" id="price" name="price" value="<%= perfume.price %>" step="0.01" required>

        <label for="volume">Объем (мл):</label>
        <input type="number" id="volume" name="volume" value="<%= perfume.volume %>" min="1" required>

        <label for="gender">Пол:</label>
        <select id="gender" name="gender" required>
            <option value="мужской" <%= perfume.gender === 'мужской' ? 'selected' : '' %>>Мужской</option>
            <option value="женский" <%= perfume.gender === 'женский' ? 'selected' : '' %>>Женский</option>
            <option value="унисекс" <%= perfume.gender === 'унисекс' ? 'selected' : '' %>>Унисекс</option>
        </select>

        <label for="brand">Бренд:</label>
        <select id="brand" name="brandId" required>
            <% brands.forEach(brand => { %>
            <option value="<%= brand.id %>" <%= brand.id === perfume.BrandId ? 'selected' : '' %>>
                <%= brand.name %>
            </option>
            <% }) %>
        </select>

        <label for="category">Категория:</label>
        <select id="category" name="categoryId" required>
            <% categories.forEach(category => { %>
            <option value="<%= category.id %>" <%= category.id === perfume.CategoryId ? 'selected' : '' %>>
                <%= category.name %>
            </option>
            <% }) %>
        </select>

        <label for="supplier">Поставщик:</label>
        <select id="supplier" name="supplierId" required>
            <% suppliers.forEach(supplier => { %>
            <option value="<%= supplier.id %>" <%= supplier.id === perfume.SupplierId ? 'selected' : '' %>>
                <%= supplier.name %>
            </option>
            <% }) %>
        </select>

        <button type="submit">Сохранить</button>
    </form>
</body>
</html>